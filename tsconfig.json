{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "rootDir": "./src/",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}
